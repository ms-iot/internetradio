<Page
    x:Class="InternetRadioController.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InternetRadioController"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="700" Width="350">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <Grid Height="40" Width="100"></Grid>
            <TextBlock FontSize="24" FontWeight="Bold">Radio Setup</TextBlock>
            <Grid Height="40" Width="100"></Grid>
            <StackPanel Orientation="Horizontal" Height="40">
                <TextBlock VerticalAlignment="Center" Margin="10">Address: </TextBlock>
                <TextBox x:Name="addressTextBox" Width="150" Text=""/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="40">
                <TextBlock VerticalAlignment="Center" Margin="10">Port:</TextBlock>
                <TextBox x:Name="portTextPox" Width="150" Text=""/>
            </StackPanel>
            <Button Click="Button_Click">Connect</Button>
        </StackPanel>
    </Grid>
</Page>
